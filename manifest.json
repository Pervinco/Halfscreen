{
  "manifest_version": 2,

  "name": "HalfScreen",
  "description": "Larger window screen for YouTube.",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "index.html"
  },
  "icons": {
    "60": "icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
